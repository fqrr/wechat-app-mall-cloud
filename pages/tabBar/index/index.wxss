/**index.wxss**/

Page{
  background-color: #EBEBEB;
}
/* 搜索部分 */
.top {
  position: fixed;
  z-index: 1;
  width: 100%;
  padding: 15rpx 0;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  align-items: center;
  background-color: #62BAE7;
}
.search {
  display: flex;
  flex-direction: row;
  border: 1px solid #999;
  width: 90%;
  height: 60rpx;
  border-radius: 50rpx;
  padding-left: 50rpx;
  align-items: center;
  /* align-self: center; */
  justify-content: space-between;
  padding-right: 20rpx;
  box-sizing: border-box;
  /* margin: 0 auto; */
  background-color: #fff;
  /* margin-top: 15rpx; */
}
.search input {
  /* border: 1px solid blue; */
  width: 85%;
}
.search image {
  width: 50rpx;
  height: 50rpx;
}

/* 轮播图 */
.banner {
  display: flex;
  justify-content: center;
  padding-top: 93rpx;
  /* width: 100%; */
}
.banner swiper{
  height: 350rpx;
  /* width: 100%; */
  width: 400px;
  overflow: hidden;
}
.banner swiper swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 导航栏 */
.navItem {
  width:97%;
  white-space: nowrap;
  padding: 15rpx 0;
  background-color: white;
  border-radius: 20rpx;
  margin: 20rpx 10rpx;
  height: 140rpx;
  margin-right: 40rpx;
}
.item{
  display: inline-block;
  width: 250rpx;
  font-size: 24rpx;
  /* background-color: #fff; */
  height: 140rpx;
  text-align: center;
  margin-top: 10rpx;
  margin-left: -10rpx;
}
.navItem .item image{
  width: 80rpx;
  height: 80rpx;
}

.navItem .item text{
  display: block;
  margin-top: 10rpx;
}


/* 产品 */
.product {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}
.product .pro {
  display: flex;
  flex-wrap: wrap;
  width: 95%;
  /* flex-direction: column; */
  justify-content: space-between;
}
.product .pro .productList{
  width: 49%;
  height: 500rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.product .pro .productList image{
  width: 100%;
  height: 320rpx;
}
.product .pro .productList .title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 10rpx;
  font-size: 28rpx;
}
.product .pro .productList .price{
  padding-left: 10rpx;
  color: #FA2C19;
}
.sales{
  float: right;
  margin-right: 20rpx;
  color: #999;
  font-size: 24rpx;
}